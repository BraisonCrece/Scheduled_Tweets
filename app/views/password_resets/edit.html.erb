<h1>Reset your password</h1>

<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |f| %>
  <%= render 'shared/form_errors', f: f %>  
  <div class="form-group mb-2">
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password,class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :password_confirmation, 'Password confirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
  </div>
  <div>
    <%= f.submit 'Reset Password', class: 'btn btn-primary mt-2', disable_with: 'Submiting...' %>
  </div>
<% end %>