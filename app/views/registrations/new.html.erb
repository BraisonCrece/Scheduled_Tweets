<h1>Sign Up</h1>

<%= form_with model: @user, url: sign_up_path do |f|%>  
  <%= render 'shared/form_errors', f: f %> 
  <div class="form-group mb-2">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'steve@email.com' %>
    <small id='emailHelp' class='form-text text-muted'>We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group mb-2">
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password,class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :password_confirmation, 'Password confirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
  </div>
  <div>
    <%= f.submit 'Get Started!', class: 'btn btn-primary mt-2', disable_with: 'Submiting...' %>
  </div>
<% end %>

